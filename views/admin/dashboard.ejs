<%- include('../admin/partials/header', { /* data header */ }) %>

<style>
.admin-back-btn {
  display: inline-block;
  margin-bottom: 20px;
  padding: 6px 12px;
  background-color: #555;
  color: #fff !important; 
  border-radius: 4px;
  font-size: 0.9em;
  font-weight: bold;
  text-decoration: none;
}
.admin-back-btn:hover {
  background-color: #666;
  text-decoration: none;
}
    .admin-dashboard-links { list-style: none; padding: 0; }
    .admin-dashboard-links li { margin-bottom: 10px; }
    .admin-dashboard-links a {
        display: block;
        padding: 15px;
        background-color: #333;
        color: #eee;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }
    .admin-dashboard-links a:hover {
        background-color: #444;
        color: #e97991;
    }
    .logout-link { display: inline-block; margin-top: 20px; color: #d9534f; }
    
    /* --- CSS UNTUK STAT-CARD --- */
    .stat-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }
    .stat-card {
      padding: 20px;
      border-radius: 5px;
      color: white;
      text-align: center;
    }
    .stat-card h3 {
      margin-top: 0;
      font-size: 1.2em;
    }
    .stat-card p {
      font-size: 2.5em;
      font-weight: bold;
      margin: 0;
    }
    .stat-anime { background-color: #007bff; }
    .stat-episodes { background-color: #28a745; }
    
    /* --- BARU: CSS UNTUK KARTU BARU --- */
    .stat-users { background-color: #ffc107; color: #333; }
    .stat-comments { background-color: #17a2b8; }
    
</style>

<h1>Admin Dashboard</h1>
<p>Selamat datang di area admin, <%= process.env.ADMIN_USERNAME || 'Admin' %>.</p>

<div class="stat-grid">
    <div class="stat-card stat-anime">
        <h3>Total Anime</h3>
        <p><%= totalAnime %></p>
    </div>
    <div class="stat-card stat-episodes">
        <h3>Total Episode</h3>
        <p><%= totalEpisodes %></p>
    </div>
</div>

<ul class="admin-dashboard-links">
    <li><a href="/admin/anime/add">Tambah Anime</a></li>
    <li><a href="/admin/anime">Kelola Anime</a></li>
    <li><a href="/admin/episodes">Kelola Episode</a></li>
    <li><a href="/admin/batch-upload">Batch Upload</a></li>
    <li><a href="/admin/backup">Backup / Restore</a></li>
</ul>

<%- include('../admin/partials/footer', { page: page }) %>