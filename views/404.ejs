<%- include('partials/header', {
  page: page,
  pageTitle: typeof pageTitle !== 'undefined' ? pageTitle : '404 - Halaman Tidak Ditemukan',
  pageDescription: 'Maaf, halaman yang Anda cari tidak ada.',
  pageImage: typeof pageImage !== 'undefined' ? pageImage : (SITE_URL + '/images/default.jpg'),
  pageUrl: typeof pageUrl !== 'undefined' ? pageUrl : SITE_URL,
  query: typeof query !== 'undefined' ? query : '',
  user: typeof user !== 'undefined' ? user : null
}) %>

<main class="flex-1 w-full min-w-0 flex flex-col items-center justify-center min-h-[60vh] py-12 text-center px-4">
  
  <div class="bg-card/50 backdrop-blur rounded-2xl border border-[#33303f] p-10 max-w-lg w-full shadow-2xl">
    <h1 class="text-9xl font-extrabold text-transparent bg-clip-text bg-gradient-to-b from-primary to-purple-600 opacity-80 select-none">
      404
    </h1>
    
    <h2 class="text-lg font-medium text-[var(--text-main)] uppercase border-l-4 border-primary pl-3">Halaman Hilang</h2>
    <p class="text-gray-400 mb-8">
      Oops! Sepertinya halaman yang Anda cari telah dipindahkan atau tidak pernah ada.
    </p>
    
    <a href="/home" class="inline-flex items-center gap-2 bg-primary hover:bg-primary-hover text-white px-8 py-3 rounded-full font-bold shadow-lg shadow-primary/30 transition-all transform hover:scale-105">
      <i class="fas fa-home"></i> Kembali ke Home
    </a>
  </div>

</main>

<%- include('partials/sidebar', { page: page }) %>
<%- include('partials/footer', { page: page }) %>
